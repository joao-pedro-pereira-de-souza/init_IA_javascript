{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./@types"],
    "target": "ES2023",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["./src/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@security/*": ["./src/security/*"],
      "@schema/*": ["./src/schema/*"],
      "@error/*": ["./src/error/*"],
      "@prisma/*": ["./prisma/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
